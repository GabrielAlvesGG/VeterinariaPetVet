@model Cliente

<h1>Cadastro de Cliente</h1>

<form method="POST" asp-action="CadastroCliente">
    <p>
        <label asp-for="nome">Nome:</label>
        <input type="text" asp-for="nome" placeholder="Nome" required>
    </p>
    <p>
        <label asp-for="dataNascimento">Data de Nascimento:</label>
        <input type="date" asp-for="dataNascimento" required>
    </p>
    <p>
        <label asp-for="login">Login:</label>
        <input type="text" asp-for="login" placeholder="Login" required>
    </p>
    <p>
        <label asp-for="senha">Senha:</label>
        <input type="password" asp-for="senha" placeholder="Senha" required>
    </p>

    <p>
        <input type="submit" value="Cadastrar">
    </p>
</form>
<p>
    @ViewBag.Mensagem
</p>